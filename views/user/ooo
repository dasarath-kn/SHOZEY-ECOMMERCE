    <script>
     const otp =   document.getElementById('otp');
     otp.addEventListener("input",otpvalid)
     function otpvalid () {
        const otpdata = document.getElementById('otp').value;
        const otpformat = "<%= otpnumber %>"

        if(otpdata.trim()===""){
            document.getElementById("otpError").innerHTML = "Enter the otp"
            otp.setCustomValidity("Enter the otp");
        }
        else{
            if(!otpdata.match(otpformat)){
                document.getElementById("otpError").innerHTML = "Invalid otp entered "
                otp.setCustomValidity("Invalid otp entered");
            }
            else{
                document.getElementById('otpError').innerHTML = " "
                otp.setCustomValidity("");
        }
        
     }
    }8

     
        </script>
