<%- include ('../admin/layouts/header.ejs')-%>
 
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
             
              <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">User Management</h4>
                      <!-- <p class="card-description"> Add class <code>.table</code> -->
                      </p>
                      <div class="table-responsive">
                        <table class="table">
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Email-id</th>
                              <th>Phonenumber</th>
                              <!-- <th>Status</th> -->
                              <th>Block/Unblock</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% data.forEach((item)=> { %>
                              <tr>
                                <td><%= item.firstname %></td>
                                <td><%= item.email %></td>
                                <td><%= item.phonenumber %></td>
                                <td>
                                  <% if (item.status == 0) { %>
                                    <p><a href="/admin/admin/block-user?id=<%= item._id %>" class="badge badge-success"  onclick="return confirm('Are you sure? Do you want to Block')">BLOCK USER</a></p>
                                  <% } else { %>
                                    <p><a href="/admin/admin/block-user?id=<%= item._id %>" class="badge badge-danger" onclick="return confirm('Are you sure? Do you want to Un-Block')" >UNBLOCK</a></p>
                                  <% } %>
                                </td>
                              </tr>
                            <% }); %>
                            
                                
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
       
         <%- include ('../admin/layouts/footer.ejs')-%>